<?xml version="1.0"?>
<config>
    <modules>
        <Adv_Iscroll>
            <version>1.1.0</version>
        </Adv_Iscroll>
    </modules>
<global>
<helpers>
            <iscroll>
                <class>Adv_Iscroll_Helper</class>
            </iscroll>
        </helpers>
</global>
    <frontend>
        <layout>
            <updates>
                <adv_iscroll>
                    <file>iscroll.xml</file>
                </adv_iscroll>
            </updates>
        </layout>
     </frontend>
  <adminhtml>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <iscroll>
                                        <title>Recsold - All</title>
                                    </iscroll>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</adminhtml>
</config>
